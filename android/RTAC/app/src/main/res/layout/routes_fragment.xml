<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             tools:context="com.alflabs.rtac.fragment.RoutesFragment">

    <TableRow
            android:id="@+id/cells_row"
            android:layout_width="match_parent">
        <!--
        Will dynamically inflate @layout/route_cell or @layout/route_sep
        -->
    </TableRow>

    <View
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

    <TextView
            android:id="@+id/data_client_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Data Client Status"
            android:gravity="center_horizontal"
            android:minLines="1"
            android:maxLines="1" />

</TableLayout>
